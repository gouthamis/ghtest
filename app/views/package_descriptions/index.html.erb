<p id="notice"><%= notice %></p>

<h1>Listing Package Descriptions</h1>

<table>
  <thead>
    <tr>
      <th>Package number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @package_descriptions.each do |package_description| %>
      <tr>
        <td><%= package_description.package_number %></td>
        <td><%= link_to 'Show', package_description %></td>
        <td><%= link_to 'Edit', edit_package_description_path(package_description) %></td>
        <td><%= link_to 'Destroy', package_description, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

